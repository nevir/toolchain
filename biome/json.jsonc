{
  // https://biomejs.dev/linter/json/rules/
  "linter": {
    "rules": {
      // https://biomejs.dev/linter/json/rules/#suspicious
      "suspicious": {
        // Duplicate keys cause the later one to silently override the first.
        "noDuplicateObjectKeys": "error"
      }
    }
  },

  "overrides": [
    // https://biomejs.dev/assist/json/actions/
    {
      "includes": ["**/*.json*"],
      "assist": {
        "actions": {
          // https://biomejs.dev/assist/json/actions/#source
          "source": {
            // Key sorting can improve readability but may conflict with
            // logical grouping or API response order.
            "useSortedKeys": "off"
          }
        }
      }
    },

    // MS' config files (tsconfig, VS Code) are JSONC with trailing commas.
    {
      "includes": [".vscode/**", "**/*tsconfig*.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        },
        "formatter": {
          "trailingCommas": "all"
        }
      }
    }
  ]
}
