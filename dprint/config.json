{
  "plugins": [
    "https://plugins.dprint.dev/exec-0.5.1.json",
    "https://plugins.dprint.dev/markdown-0.19.0.wasm",
  ],

  "exec": {
    "cwd": "${configDir}",

    "commands": [
      {
        "exts": ["json", "jsonc", "json5", "js", "jsx", "ts", "tsx"],
        "command": "yarn biome format --stdin-file-path={{file_path}}",
      },
    ],
  },
}
