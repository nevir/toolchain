{
  // Formatting
  "dprint.experimentalLsp": true,
  "dprint.path": "node_modules/dprint/dprint",

  "editor.defaultFormatter": "dprint.dprint",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Editing
  "editor.rulers": [80, 120],

  // Workspace
  "files.exclude": {
    "**/.*": false,
    "**/node_modules/": false,
    "**/*.lock": false,
    "*config.json": false,
    "biome.json*": false,
    "dprint.json": false,
    "main.js": false
  },

  // TypeScript
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",

  // Language / Syntax Overrides
  "files.associations": {
    "**/dprint/**/*.json": "jsonc",
    "**/typescript/**/*.json": "jsonc"
  },

  "json.schemas": [
    {
      "fileMatch": ["{,**/}biome.jsonc", "biome/**/*.jsonc"],
      "url": "/node_modules/@biomejs/biome/configuration_schema.json"
    },
    {
      "fileMatch": ["dprint/**/*.json"],
      "url": "https://dprint.dev/schemas/v0.json",
      "allowTrailingCommas": true
    },
    {
      "fileMatch": ["typescript/**/*.json"],
      "url": "https://json.schemastore.org/tsconfig",
      "allowTrailingCommas": true
    }
  ]
}
